version: "3.1"
services:

  webserver:
    image: nginx:alpine
    container_name: codebase-webserver
    working_dir: /application
    volumes:
      - .:/application
      - ./docker/nginx/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./storage/logs/:/var/log/nginx
    ports:
      - "80:80"
      - "443:443"

  php-fpm:
    image: codebase
    build: docker/php-fpm
    container_name: codebase-php-fpm
    working_dir: /application
    volumes:
      - .:/application

  mysql:
    image: mysql:8.0
    container_name: codebase-mysql
    working_dir: /application
    volumes:
      - .:/application
      - ./data/mysql:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD=secret
      - MYSQL_DATABASE=homestead
    ports:
      - "3306:3306"

  redis:
    image: redis:alpine
    container_name: codebase-redis
